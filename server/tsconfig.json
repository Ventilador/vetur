{
  "extends": "../tsconfig.options.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "es2016.array.include"
    ],
    // Most classes in VLS are asynchronously initialized
    "strictPropertyInitialization": false
  },
  "include": [
    "src", "shared"
  ],
  "exclude": ["node_modules"]
}